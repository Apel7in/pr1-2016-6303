int main()
{
    int array[7] = {1,5,8,3,0,4,6};
    scanf("%d", array);
    int max, min;
    int i,k=0;
    
    min = array[0];
    max = array[0];
    for (i=1; i<7; i++)
    {
        if (array[i]<min)
        min = array[i];
    }
    
    for (i=1; i<7; i++)
    {
        if (array[i]>max)
        max = array[i];
    }
    
    k = max - min;
    printf("%d",k);
    return 0;
}
