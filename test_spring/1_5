#include <stdio.h>
int main()
{
  int lng;
  scanf("%d", &lng);
  int arr[lng];

  for(int i=0; i<lng; i++)
    scanf("%d", &arr[i]);
  int max = arr[0];
  int min = arr[0];
  for(int i=0; i<lng; i++)
  {
      if(arr[i] > arr[i-1])
      max = arr[i];
      if(arr[i] < arr[i-1])
      min = arr[i];
  }
  int sol;
  sol=max-min;
  printf("%d\n", sol);
}
